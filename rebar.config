{escript_shebang, "#!/usr/bin/env escript\n"}.
{escript_comment, "%% -nocookie\n"}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform}
]}.
{deps, [
    {getopt, ".*", {git, "git://github.com/jcomellas/getopt.git", {branch, "master"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {meck, ".*", {git, "git://github.com/basho/meck.git", {branch, "feature/otp-17"}}}
]}.

{escript_incl_apps, [lager, getopt, goldrush]}.
{edoc_opts, [{stylesheet_file, "priv/edoc.css"}]}.
